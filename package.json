{
  "name": "kira-asterales-new",
  "version": "1.0.0",
  "description": "High-performance novel API server with clean architecture",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "dev-local": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "migrate:novels": "tsx src/scripts/migration/index.ts",
    "migrate:novels:dry": "tsx src/scripts/migration/index.ts --dry-run",
    "analyze:data": "tsx src/scripts/migration/analyze-data.ts",
    "export:tags-genres": "tsx src/scripts/migration/export-tags-genres.ts",
    "export:taxonomy": "tsx src/scripts/migration/export-tags-genres.ts",
    "index:elasticsearch": "tsx src/scripts/elasticsearch-indexer.ts",
    "update:approval-status": "tsx src/scripts/update-approval-status.ts",
    "index:chapters": "tsx src/scripts/chapter-indexer.ts",
		"index:taxonomy": "tsx src/scripts/taxonomy-indexer.ts",
		"index:incremental": "tsx src/scripts/es-incremental-indexer.ts",
		"optimize:es": "tsx src/scripts/optimize-elasticsearch.ts",
		"build:chapter-lists": "tsx src/scripts/build-chapter-lists.ts",
    "copy-assets": "copyfiles -u 1 src/assets/**/* dist/",
    "start": "node dist/app.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "novel",
    "api",
    "fastify",
    "mongodb",
    "elasticsearch"
  ],
  "author": "KIRA Team",
  "license": "MIT",
